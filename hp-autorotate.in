fn die {
  echo E: $* >[1=2]
  exit 1
}

fn warn {
  echo W: $* >[1=2]
}

fn sigterm {
  rotate_it NONE normal
  if (test -e $pidfile)
    rm -f $pidfile
}

fn rotate_it {
  for (i in $inputdevs) {
    xsetwacom set $i Rotate $1
  }
  xrandr -o $2
}

events=/sys/devices/platform/hp-wmi/tablet
if (! test -e $events) {
  if (awk '/^hp_wmi/{exit 1}' /proc/modules) {
    die 'hp_wmi driver not loaded'
  } else {
    die 'Are you sure your machine is a tablet?'
  }
}

test -z $DISPLAY && die '$DISPLAY not set'

bname=`{basename $0}
pidfile=$HOME/.$bname-lock
if (test -e $pidfile) {
  oldpid=`{cat $pidfile} {
    if (~ $0 `{readlink /proc/$oldpid/exe}) {
      warn $bname already running (pid=$oldpid), killing it.
      kill $oldpid
    } else {
      warn stale pidfile, overwritting it.
    }
  }
}

echo $pid > $pidfile

inputdevs=`{
  xinput --list |
  awk -F'(id=| *\[)' '/Wacom.* (touch|eraser|stylus)/{print $2}'
}

old=n
while (true) {
  new=`{cat /sys/devices/platform/hp-wmi/tablet}
  if (! ~ $new $old) {
    switch ($new) {
    # also it's possible:
    #   rotate_it CCW  left
    #   rotate_it CW   right
      case 1
        rotate_it HALF inverted
      case 0
        rotate_it NONE normal
    }
    old=$new
  }
  sleep 1
}
